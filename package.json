{
  "name": "bundle-md",
  "version": "0.9.1",
  "description": "Document your project's structure by bundling directory READMEs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "assets": "mkdirp dist/assets && copyfiles -u 1 \"src/assets/*.*\" dist",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run assets",
    "start": "ts-node src/index.ts"
  },
  "author": "toBeOfUse",
  "license": "ISC",
  "keywords": [
    "cli",
    "markdown",
    "readme"
  ],
  "devDependencies": {
    "@types/argparse": "^2.0.10",
    "@types/fs-extra": "^9.0.13",
    "@types/he": "^1.1.2",
    "@types/jsdom": "^20.0.1",
    "copyfiles": "^2.4.1",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "fs-extra": "^10.1.0",
    "he": "^1.2.0",
    "jsdom": "^20.0.3"
  }
}
